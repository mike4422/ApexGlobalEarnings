datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

enum InvestmentStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum TransactionType {
  DEPOSIT
  INVESTMENT_RETURN
  REFERRAL_EARNING
  WITHDRAWAL
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

enum WithdrawalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AssetSymbol {
  BTC
  ETH
  USDT
  GOLD
  NAS100
}

enum WalletNetwork {
  TRC20
  BEP20
  ERC20
}


model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  username     String   @unique
  passwordHash String
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  balanceCents Int     @default(0)
  referralCode String  @unique
  referredById String?
  referredBy   User?   @relation("UserReferrals", fields: [referredById], references: [id])
  referrals    User[]  @relation("UserReferrals")

  investments  Investment[]
  transactions Transaction[]

  // FIXED — must match Withdrawal.owner
  withdrawals Withdrawal[] @relation("WithdrawalOwner")

  // FIXED — must match ReferralEarning.earner
  referralEarnings ReferralEarning[] @relation("ReferralEarner")

  sessions Session[]

  // FIXED for multi-relation in ReferralEarning
  referralSource ReferralEarning[] @relation("ReferralSource")

  // FIXED for multi-relation in Withdrawal
  withdrawalReviewed Withdrawal[] @relation("WithdrawalReviewer")

  // FIXED — WalletAddress relation
  walletAddresses WalletAddress[]

  // NEW: Email verification
  emailVerifiedAt             DateTime?
  emailVerificationToken      String?   @unique
  emailVerificationExpiresAt  DateTime?

  notifications     Notification[] @relation("UserNotifications")
  notificationsSent Notification[] @relation("AdminNotifications")

  // ✅ NEW: Password reset
  passwordResetTokenHash      String?
  passwordResetExpiresAt      DateTime?

}

model Session {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  jwtId     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Plan {
  id             Int      @id @default(autoincrement())
  name           String
  slug           String   @unique
  minAmountCents Int
  maxAmountCents Int
  dailyRoiBps    Int
  durationDays   Int
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  investments Investment[]
}

model Investment {
  id          String           @id @default(cuid())
  userId      String
  planId      Int
  amountCents Int
  status      InvestmentStatus @default(ACTIVE)
  startDate   DateTime         @default(now())

  // FIXED: optional endDate
  endDate DateTime?

  accruedReturnCents Int       @default(0)
  lastRoiAccruedAt   DateTime?

  user User @relation(fields: [userId], references: [id])
  plan Plan @relation(fields: [planId], references: [id])
}

model ReferralEarning {
  id                 String   @id @default(cuid())
  earnerId           String
  fromUserId         String
  level              Int      @default(1)
  amountCents        Int
  sourceInvestmentId String?
  createdAt          DateTime @default(now())

  // FIXED — must match User.referralEarnings
  earner User @relation("ReferralEarner", fields: [earnerId], references: [id])

  // FIXED — must match User.referralSource
  fromUser User @relation("ReferralSource", fields: [fromUserId], references: [id])
}

model WalletAddress {
  id        Int           @id @default(autoincrement())
  userId    String
  asset     AssetSymbol
  network   WalletNetwork?  // ✅ add this
  address   String
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, asset, network]) // ✅ replace old unique
}





model Transaction {
  id          String            @id @default(cuid())
  userId      String
  type        TransactionType
  asset       AssetSymbol
  amountCents Int
  status      TransactionStatus @default(PENDING)
  reference   String?
  meta        Json?
  createdAt   DateTime          @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Withdrawal {
  id            String           @id @default(cuid())
  userId        String
  asset         AssetSymbol
  amountCents   Int
  status        WithdrawalStatus @default(PENDING)
  targetAddress String
  createdAt     DateTime         @default(now())
  reviewedAt    DateTime?
  reviewedById  String?

  // FIXED — must match User.withdrawals
  user User @relation("WithdrawalOwner", fields: [userId], references: [id])

  // FIXED — must match User.withdrawalReviewed
  reviewedBy User? @relation("WithdrawalReviewer", fields: [reviewedById], references: [id])
}

model DepositAddress {
  id        Int          @id @default(autoincrement())
  asset     AssetSymbol
  network   WalletNetwork?
  address   String
  isActive  Boolean      @default(true)
  createdAt DateTime     @default(now())

  @@unique([asset, network])
}

model Settings {
  id Int @id @default(1)

  // Referral config (already used by roiCron.ts)
  level1Bps Int @default(0)
  level2Bps Int @default(0)

  // Platform deposit addresses (NEW)
  btcDepositAddress        String?
  ethDepositAddress        String?

  usdtTrc20DepositAddress  String?
  usdtBep20DepositAddress  String?
  usdtErc20DepositAddress  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Notification {
  id          String   @id @default(cuid())
  userId      String
  createdById String?
  title       String
  message     String
  data        Json?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  readAt      DateTime?

  user      User  @relation("UserNotifications", fields: [userId], references: [id])
  createdBy User? @relation("AdminNotifications", fields: [createdById], references: [id])

  @@index([userId, isRead, createdAt])
}
